<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".CooladataTester"
    android:gravity="center_vertical">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/event1_user_property"
        android:id="@+id/event1_user_property_button"
        android:layout_gravity="center"
        android:background="@color/user_property_color"
        android:layout_margin="10dp"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/event1_session_property"
        android:id="@+id/event1_session_property_button"
        android:layout_gravity="center"
        android:background="@color/session_property_color"
        android:layout_margin="10dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/event1_event_property"
        android:id="@+id/event1_event_property_button"
        android:layout_gravity="center"
        android:background="@color/event_property_color"
        android:layout_margin="10dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/event2_user_property"
        android:id="@+id/event2_user_property_button"
        android:layout_gravity="center"
        android:background="@color/user_property_color"
        android:layout_margin="10dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/event2_session_property"
        android:id="@+id/event2_session_property_button"
        android:layout_gravity="center"
        android:background="@color/session_property_color"
        android:layout_margin="10dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/event2_event_property"
        android:id="@+id/event2_event_property_button"
        android:layout_gravity="center"
        android:background="@color/event_property_color"
        android:layout_margin="10dp" />

</LinearLayout>
