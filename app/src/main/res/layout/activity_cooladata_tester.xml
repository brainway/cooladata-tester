<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".CooladataTester"
    android:gravity="center_vertical"
    android:weightSum="1">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_weight="1"
        android:layout_gravity="top">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/customEvenHandlerResultView"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:clickable="true"
            android:editable="false"
            android:enabled="true"
            android:focusableInTouchMode="true"
            android:gravity="top"
            android:focusable="true"
            android:autoText="false"
            android:onClick="onClick"
            android:nestedScrollingEnabled="true"
            android:longClickable="true"
            android:singleLine="false"
            android:textIsSelectable="false" />
    </ScrollView>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/event1_user_property"
        android:id="@+id/event1_user_property_button"
        android:layout_gravity="center"
        android:background="@color/user_property_color"
        android:layout_margin="10dp"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/event1_session_property"
        android:id="@+id/event1_session_property_button"
        android:layout_gravity="center"
        android:background="@color/session_property_color"
        android:layout_margin="10dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/event1_event_property"
        android:id="@+id/event1_event_property_button"
        android:layout_gravity="center"
        android:background="@color/event_property_color"
        android:layout_margin="10dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/event2_user_property"
        android:id="@+id/event2_user_property_button"
        android:layout_gravity="center"
        android:background="@color/user_property_color"
        android:layout_margin="10dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/event2_session_property"
        android:id="@+id/event2_session_property_button"
        android:layout_gravity="center"
        android:background="@color/session_property_color"
        android:layout_margin="10dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/event2_event_property"
        android:id="@+id/event2_event_property_button"
        android:layout_gravity="center"
        android:background="@color/event_property_color"
        android:layout_margin="10dp" />

</LinearLayout>
